@model MVCAlunos.Models.AlunoModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

<h3 class="text-danger">Tem Certeza que quer deletar @Html.DisplayFor(model => model.Nome)?</h3>
<div>
    <h4>Aluno</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)



        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cpf)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cpf)



        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nascimento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nascimento)


        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sexo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sexo)



        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Matricula" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index">
            <button type="button" class="btn btn-dark">
                Voltar
            </button>
        </a>
    </form>
</div>
